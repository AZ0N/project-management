<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <root>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <TextField fx:id="employeeInitialsTextField">
               <VBox.margin>
                  <Insets bottom="10.0" left="100.0" right="100.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#addEmployee" text="Add Employee" />
            <ListView fx:id="employeeListView" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" top="10.0" />
               </VBox.margin>
            </ListView>
         </children>
      </VBox>
   </root>
</Scene>
